<view class='page'>
  <view class='telNum'>
    <view class='telNumItem'>
      <view class='telNumItemIconWrap'>
        <image src='/images/telNumLine.png' class='telNumItemIconLine'></image>
        <image src='/images/telNum1.png' class='telNumIcon1'></image>
      </view>
      <view class='telNumItemCon'>
        <input placeholder='请输入手机号' bindinput="phone"></input>
      </view>
    </view>
    <view class='telNumItem'>
      <view class='telNumItemIconWrap'>
        <image src='/images/telNumLine.png' class='telNumItemIconLine'></image>
        <image src='/images/telNum3.png' class='telNumIcon3'></image>
      </view>
      <view class='telNumItemCon'>
        <input placeholder='请输入密码' type="password" name="password" bindinput="pwd"></input>
      </view>
    </view>
    <view class='subBtn' bindtap='register'>绑定</view>
  </view>
</view>