page{background-color: #FFFFFF;}
.page{border-top: 1rpx solid #EAEAEA; color:#333333;font-size: 28rpx; font-family: '微软雅黑';}
.page view{box-sizing: border-box;}
.telNum{width: 100%;margin-top: 20rpx;padding: 0 50rpx;}
.telNumItem{width: 100%;height: 80rpx;background-color: #F5F5F5;border-radius: 10rpx;padding-left: 80rpx;position: relative;overflow: hidden;margin-top: 30rpx;}
.telNumItemIconWrap{width: 80rpx;height: 80rpx;position: absolute;left: 0;top: 0;display: flex;align-items: center;justify-content: center;}
.telNumItemIconLine{width: 2rpx;height: 61rpx;position: absolute;right: 0;}
.telNumIcon1{width: 29rpx;height: 34rpx;}
.telNumItemCon{width: 100%;height: 80rpx;padding-left: 20rpx;}
.verCodeWrao{display: flex;}
.telNumItemCon>input{height: 80rpx;}
.telNumIcon2{width: 28rpx;height: 36rpx;}
.verCodeInput{flex: 1;}
.verCode{width: 170rpx;height: 80rpx;background-color: #DC3B31;text-align: center;line-height: 80rpx;color: #FFFFFF;font-size: 24rpx;}
.telNumIcon3{width: 29rpx;height: 33rpx;}
.subBtn{width: 100%;height: 80rpx;text-align: center;line-height: 80rpx;border-radius: 10rpx;color: #FFFFFF;background-color: #DC3B31;margin-top: 80rpx;}